<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.illimani.sistemadeventas.PedidosActivity"
    android:weightSum="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Cod. Prod.."
            android:id="@+id/textView7"
            android:layout_weight="0.10"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codProd"
            android:layout_weight="0.76" />
    </LinearLayout>
    <TextView
        android:layout_width="354dp"
        android:layout_height="36dp"
        android:id="@+id/mueDescPro"
        android:layout_weight="0.02" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Cantidad:"
            android:id="@+id/textView9"
            android:layout_weight="0.10"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingCantidad"
            android:layout_weight="0.76" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Venta:"
            android:id="@+id/textView10"
            android:layout_weight="0.26"
            android:textSize="20dp" />
        <TextView
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:id="@+id/muePre" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:id="@+id/button7"
            android:onClick="agregar"
            android:layout_weight="0.42" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar"
            android:onClick="finalizar"
            android:id="@+id/button8"
            android:layout_weight="0.39" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.67">
        <TextView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:id="@+id/mosVenAgre"
            android:layout_weight="0.66" />
    </ScrollView>
</LinearLayout>
